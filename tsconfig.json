{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*"]
        },
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noImplicitThis": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": ["dom", "es5", "scripthost", "es2015", "es2017"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["**/*.test.ts", "**/*.test.tsx", "node_modules", "dist"]
}
